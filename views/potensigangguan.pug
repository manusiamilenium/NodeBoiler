extends topmenu/potensigangguanhome.pug
block content-header
    .panel-header.panel-header-sm
block content
      .row
        .col-md-12
            .card
                .card-header
                    if notification
                        .alert.alert-danger
                            button.close(type='button' aria-hidden='true')
                                i.now-ui-icons.ui-1_simple-remove
                            span
                                b  #{notification}
                    h4.card-title  Potensi Gangguan
                    a.btn.btn-info.btn-round.card-title(href='/potensigangguan/add' role='button')
                        i.now-ui-icons.ui-1_simple-add
                        |  Tambah      
                    // Example single danger button
                    //.btn-group
                        button.btn.btn-info.btn-round.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                            |    Pilih Filter Satwil
                        .dropdown-menu
                            a.dropdown-item(href='#') Action
                            a.dropdown-item(href='#') Another action
                            a.dropdown-item(href='#') Something else here
                            .dropdown-divider
                            a.dropdown-item(href='#') Separated link

                .card-body
                    .table-responsive
                        table.table
                            thead.text-primary
                                th
                                    | No
                                th
                                    | Satwil / Satker Pengirim
                                th
                                    | Tahun
                                th
                                    | Jumlah
                                th
                                    | Action
                                 
                            tbody
                                each val, index in data
                                    tr
                                        td= index+1 
                                        td= val["nama_satwil"]
                                        td= val["tahun_potensi_gangguan"]
                                        td= val["jumlah_potensi_gangguan"]
                                        td
                                            a.btn.btn-primary.btn-round(href='./potensigangguan/file/'+ val["id_potensi_gangguan"] role='button')
                                                i.now-ui-icons.files_paper
                                                |  Lihat File
                                            |  
                                            a.btn.btn-danger.btn-round(href='./potensigangguan/delete/'+ val["id_potensi_gangguan"] role='button')
                                                i.now-ui-icons.ui-1_simple-remove
                                                |  Delete