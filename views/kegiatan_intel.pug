extends topmenu/kegiatan_intel_menu.pug
block content-header
    .panel-header.panel-header-sm 
block content
    .row
        .col-md-12
            .card
                .card-header
                    include notification.pug
                    h4.card-title  Data Kegiatan Intelijen
                    a.btn.btn-info.btn-round.card-title(href='/kegiatanintel/add' role='button')
                        i.now-ui-icons.ui-1_simple-add
                        |  Tambah      
                    // Example single danger button
                    //.btn-group
                        button.btn.btn-info.btn-round.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                            |    Pilih Filter Satwil
                        .dropdown-menu
                            a.dropdown-item(href='#') Action
                            a.dropdown-item(href='#') Another action
                            a.dropdown-item(href='#') Something else here
                            .dropdown-divider
                            a.dropdown-item(href='#') Separated link

                .card-body
                    .table-responsive
                        table#datatables.table
                            thead.text-primary
                                th
                                    | No
                                th
                                    | Satwil
                                th
                                    | Bulan
                                th
                                    | Tahun
                                th
                                    | Jenis 
                                th
                                    | Total 
                                th
                                    | Mereduksi
                                th
                                    | Uraian
                                th
                                    | Action
                                 
                            tbody
                                each val, index in data
                                    tr
                                        td= index+1 
                                        td= val["nama_satwil"]
                                        td= val["bulan_kegiatan_intelijen"] + "/" + val["tahun_kegiatan_intelijen"]
                                        td= val["nama_jenis"]
                                        td= val["jumlah_kegiatan_intelijen"]
                                        td= val["reduksi_kegiatan_intelijen"]
                                        td
                                            a.btn.btn-primary.btn-round(href='/kegiatanintel/edit/'+ val["id_kegiatan_intelijen"] role='button')
                                                i.now-ui-icons.design-2_ruler-pencil
                                                |  Edit
                                            |  
                                            a.btn.btn-danger.btn-round(href='/kegiatanintel/delete/'+ val["id_kegiatan_intelijen"] role='button')
                                                i.now-ui-icons.ui-1_simple-remove
                                                |  Delete
    script.
        $(document).ready( function () {
            var months = ["", "Januari", "Februari", "Maret", "April", "Mei", "Juni", 
           "Juli", "Augustus", "September", "Oktober", "November", "Desember" ];

            var t = $('#datatables').DataTable({
                "order": [[ 1, "asc" ]],
                "processing": true,
                "language": {
                    processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span> '},
 
                "serverSide": true,
                "ajax": "/api/kegiatanintel/data", 
                "columnDefs": [ {
                                    "targets": -1,
                                    "data": null,
                                    "render": function ( data, type, row ) {
                                                    return  "<a class='btn btn-danger btn-sm btn-round' href='/kegiatanintel/delete/"+ data[0] +"' role='button'>"+
                                                            "<i class='now-ui-icons ui-1_simple-remove'></i> Delete</a></td>";
                                                },
                                },
                                {
                                    "targets": 2,
                                    "data": null,
                                    "render": function ( data, type, row ) {
                                                    return  months[data[2]];
                                                },
                                } ],
                dom: 'Bfrtip',
                buttons: generateButton()
            });
            t.on( 'draw.dt', function () {
                var PageInfo = $('#datatables').DataTable().page.info();
                createIndex(t,PageInfo);
            });
 

        } );