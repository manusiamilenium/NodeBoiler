extends topmenu/dataprodukintelhome.pug
block content-header
    .panel-header.panel-header-sm
block content
    .row
      .col-md-8
        .card
          .card-header 
            h5.title Pengiriman Produk Intelijen  (IKU3)
            include notification.pug
          .card-body
            form(action='/pengirimanproduk/add' method='POST')               
              .row
                .col-md-6.pr-1
                  .form-group
                    label Nomor Surat
                    input.form-control(type='text' name="nomor_produk_keluar" placeholder='Masukkan Nomor' value=''+ (data['nomor_produk_keluar']=== undefined ?'': data['nomor_produk_keluar'])) 
              .row
                .col-md-6.pr-1
                  .form-group
                    label Tanggal
                    input.form-control(type='date' name="tanggal_produk_keluar" placeholder='Masukkan Bulan' value=''+ (data['tanggal_produk_keluar']=== undefined ?'': data['tanggal_produk_keluar']))               
              .row
                .col-md-6.pr-1
                  .form-group
                    label Perihal
                    input.form-control(type='text' name="perihal_produk_keluar" placeholder='Perihal' value=''+ (data['perihal_produk_keluar']=== undefined ?'': data['perihal_produk_keluar']))
              .row
                .col-md-6.pr-1 
                  .form-group
                    .btn-group.dropright
                      button.btn.btn-secondary.btn-round.dropdown-toggle(type='button' name="jenisproduk" data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                          |    Jenis Produk
                      <input type="hidden" id="jenis_produk_intelijen" name="jenis_produk_intelijen" value="">
                      .dropdown-menu
                          each val, index in jenis
                              a.dropdown-item(href='#' 
                                  onCLick="$(\"button[name ='jenisproduk']\").text($(this).text());$(\"input[name ='jenis_produk_intelijen']\").val("+val["id_produk_intelijen"]+");")
                                  = val["nama_produk_intelijen"]
                              
              .row
                .col-md-6.pr-1
                  .form-group
                    input.btn.btn-info.btn-round(type='submit' placeholder='' value='Submit')    