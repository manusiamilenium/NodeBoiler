extends topmenu/potensigangguanhome.pug
block content-header
    .panel-header.panel-header-sm
block content
    .row
      .col-md-8
        .card
          .card-header
            h5.title Potensi Gangguan (IKU1)
            include notification.pug
          .card-body
            form(action='/potensigangguan' method='POST' enctype="multipart/form-data")
              .row
                .col-md-6.pr-1
                  .form-group
                    label Tahun
                    input.form-control(type='text' name="tahun_potensi_gangguan" placeholder='Masukkan Tahun' value=''+ (data['tahun_potensi_gangguan']=== undefined ?'': data['tahun_potensi_gangguan']))
              .row
                .col-md-6.pr-1
                  .form-group
                    label Jumlah
                    input.form-control(type='text' name="jumlah_potensi_gangguan" placeholder='Masukkan Jumlah Potensi' value=''+ (data['jumlah_potensi_gangguan']=== undefined ?'': data['jumlah_potensi_gangguan']))
              .row
                .col-md-12
                  .form-group
                    label Upload Dokumen
                    input.btn.btn-info.btn-round(type='file' name="attachment" placeholder='Dokumen' value='Potensi.pdf') 
              .row
                .col-md-6.pr-1
                  .form-group
                    input.btn.btn-info.btn-round(type='submit' placeholder='' value='Submit')    